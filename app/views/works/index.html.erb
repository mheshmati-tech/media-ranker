<h2> List of Works </h2>

<% if @albums.length > 0 %>
  <h2>Albums</h2>
  <table class = "table">  
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
    </tr>
  <% @albums.each do |album| %>
    <tr>
      <th><%= album.title %></th>
      <th><%= album.creator %></th>
      <th><%= album.publication_year %></th>
    </tr>
  <% end %>
  </table>
<% else %>
    <h3> No Albums in the system! </h3>
<% end %>



