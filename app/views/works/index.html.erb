<main>
	<h2>List of Works</h2>
	<section class="media-table">
		<h4>Albums</h4>
		<table class="table">
			<thead>
				<tr>
					<th width="80">Votes</th>
					<th>Title</th>
					<th>Created By</th>
					<th width="100">Published</th>
					<th width="100">Upvote</th>
				</tr>
			</thead>
			<tbody>
				<% @albums.each do |album| %>
					<tr>
						<td>Number of votes</td>
						<td width="row"><%= link_to album.title, work_path(album.id) %></td>
						<td><%= album.creator %></td>
						<td><%= album.publication_year %></td>
						<td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/573/upvote">Upvote</a></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</section>
	<section class="media-table">
		<h4>Books</h4>
		<table class="table">
			<thead>
				<tr>
					<th width="80">Votes</th>
					<th>Title</th>
					<th>Created By</th>
					<th width="100">Published</th>
					<th width="100">Upvote</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td>Number of votes</td>
						<td width="row"><%= link_to book.title, work_path(book.id) %></td>
						<td><%= book.creator %></td>
						<td><%= book.publication_year %></td>
						<td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/573/upvote">Upvote</a></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<section class="media-table">
			<h4>Movies</h4>
			<table class="table">
				<thead>
					<tr>
						<th width="80">Votes</th>
						<th>Title</th>
						<th>Created By</th>
						<th width="100">Published</th>
						<th width="100">Upvote</th>
					</tr>
				</thead>
				<tbody>
					<% @movies.each do |movie| %>
						<tr>
							<td>Number of votes</td>
							<td width="row"><%= link_to movie.title, work_path(movie.id) %></td>
							<td><%= movie.creator %></td>
							<td><%= movie.publication_year %></td>
							<td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/573/upvote">Upvote</a></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</section>
		<div class="btn btn-secondary"> <%= link_to "View Top Media", root_path%> </div>
		<div class="btn btn-primary"> <%= link_to "Add new work", new_work_path %></div>
	</main>
