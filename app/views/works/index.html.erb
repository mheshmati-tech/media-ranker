<main>
	<h2>List of works</h2>
	<section class="media-table">
		<h4>Albums</h4>
		<table class="table">
			<thead>
				<tr>
					<th width="80">Votes</th>
					<th>Title</th>
					<th>Created By</th>
					<th width="100">Published</th>
					<th width="100">Upvote</th>
				</tr>
			</thead>
			<tbody>
				<% Work.albums.each do |album| %>
					<tr>
						<td><%= album.votes.count %></td>
						<td width="row"><%= link_to album.title, work_path(album.id) %></td>
						<td><%= album.creator %></td>
						<td><%= album.publication_year %></td>
						<td class="btn btn-outline-primary" ><%= link_to "Upvote", votes_path(album.id), method: :post %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</section>
	<section class="media-table">
		<h4>Books</h4>
		<table class="table">
			<thead>
				<tr>
					<th width="80">Votes</th>
					<th>Title</th>
					<th>Created By</th>
					<th width="100">Published</th>
					<th width="100">Upvote</th>
				</tr>
			</thead>
			<tbody>
				<% Work.books.each do |book| %>
					<tr>
						<td><%= book.votes.count %></td>
						<td width="row"><%= link_to book.title, work_path(book.id) %></td>
						<td><%= book.creator %></td>
						<td><%= book.publication_year %></td>
						<td class = "btn btn-outline-primary"><%= link_to "Upvote", votes_path(book.id), method: :post %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<section class="media-table">
			<h4>Movies</h4>
			<table class="table">
				<thead>
					<tr>
						<th width="80">Votes</th>
						<th>Title</th>
						<th>Created By</th>
						<th width="100">Published</th>
						<th width="100">Upvote</th>
					</tr>
				</thead>
				<tbody>
					<% Work.movies.each do |movie| %>
						<tr>
							<td><%= movie.votes.count %></td>
							<td width="row"><%= link_to movie.title, work_path(movie.id) %></td>
							<td><%= movie.creator %></td>
							<td><%= movie.publication_year %></td>
							<td class="btn btn-outline-primary" ><%= link_to "Upvote", votes_path(movie.id), method: :post %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</section>
		<div class="btn btn-outline-primary"> <%= link_to "View Top Media", root_path%> </div>
		<div class="btn btn-outline-primary"> <%= link_to "Add New Work", new_work_path %></div>
	</main>
