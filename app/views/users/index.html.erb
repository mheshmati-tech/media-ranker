<main>
	<section class="media-table">
		<h2>List of all users</h2>
		<table class="table">
			<thead>
				<tr>
					<th width="80">Name</th>
					<th width="80">Votes</th>
					<th width="80">Joined</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= link_to user.name, user_path(user.id) %></td>
						<td width="row"><%= user.votes.count  %></td>
						<td><%= user.created_at.strftime("%B %d, %Y") %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</section>
</main>
