<!DOCTYPE html>
<html>
	<head>
		<title>MediaRanker</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>
	<body>
		<header class="app-header__header">
			<h1>
				<strong><%= link_to "Media Ranker", root_path %></strong>
				<small>Ranking the Best of Everything</small>
			</h1>
			<nav class="app-header__nav">
				<ul class="nav app-header__site-nav-container">
					<li class="nav-item app-header__nav_item">
						<div class="nav-link"> <%= link_to "Top Media", root_path %></div>
					</li>
					<li class="nav-item app-header__nav_item">
						<div class="nav-link"> <%= link_to "All media", works_path %></div>
					</li>
					<li class="nav-item app-header__nav_item">
						<div class="nav-link"> <%= link_to "Add new work", new_work_path %></div>
					</li>
					<li class="nav-item app-header__nav_item">
						<div class="nav-link"> <%= link_to "All Users", users_path %></div>
					</li>
				</ul>
				<ul class="nav app-header__user-nav-container">
					<% unless @logged_user.nil? %>
						<li class="nav-item app-header__nav_item">
							<div class="btn btn-outline-primary"> Logged in as <%= @logged_user.name %> </div>
						</li>
						<li class="nav-item app-header__nav_item">
							<div class="btn btn-outline-primary" ><%= link_to "Logout", logout_path, method: :post %> </div>
						</li>
					<% else %>
						<li class="nav-item app-header__nav_item">
							<div class="btn btn-outline-primary"> <%= link_to "Log in", login_path %></div>
						</li>
					<% end %>
				</ul>
			</nav>
		</header>
		<section class="alert__container">
			<% flash.each do |name, message| %>
				<% if flash[:success] %>
					<div class="alert alert-success"> <span> <%= message%> </span></div>
				<% else %>
					<div class = "alert alert-warning"><span> <%= message%> </span></div>
				<% end %>
			<% end %>
		</section>
		<%= yield %>
	</body>
</html>
